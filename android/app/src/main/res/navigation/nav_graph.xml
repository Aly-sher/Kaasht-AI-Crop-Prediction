<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/predictionFragment">

    <fragment
        android:id="@+id/predictionFragment"
        android:name="com.kaasht.croprecommendation.ui.prediction.PredictionFragment"
        android:label="Crop Prediction"
        tools:layout="@layout/fragment_prediction">
        <action
            android:id="@+id/action_prediction_to_result"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_prediction_to_soilSensor"
            app:destination="@id/soilSensorFragment" />
    </fragment>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.kaasht.croprecommendation.ui.weather.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.kaasht.croprecommendation.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/soilSensorFragment"
        android:name="com.kaasht.croprecommendation.ui.soil.SoilSensorFragment"
        android:label="Soil Sensor"
        tools:layout="@layout/fragment_soil_sensor" />

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.kaasht.croprecommendation.ui.result.ResultFragment"
        android:label="Prediction Result"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="predictionResponse"
            app:argType="com.kaasht.croprecommendation.data.model.CropPredictionResponse" />
    </fragment>

</navigation>
